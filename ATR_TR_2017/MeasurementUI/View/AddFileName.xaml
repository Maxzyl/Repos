<dx:DXWindow x:Class="MeasurementUI.View.AddFileName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"          
        Title="新建文件" Height="130" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="文件名称:" Margin="10"></Label>
                <TextBox Name="txtName" Margin="0,10,0,5" MinWidth="300" MaxHeight="500"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,0" HorizontalAlignment="Right">
                <Button Content="保存" Name="btnSave" Height="30" Width="88" Click="btnSave_Click"/>
                <Button Content="关闭" Name="btnCancel" Margin="5,5" Height="30" Width="88" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
       
      
    </Grid>
</dx:DXWindow>
