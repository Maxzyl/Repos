<UserControl x:Class="TestResultMarkerDip.ResultPowerDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" Name="stackPanel2">
            <StackPanel Orientation="Horizontal">
                <Label Content="载波功率F1:" Margin="10,3" FontSize="20"></Label>
                <TextBlock Text="{Binding Path=Power1,Mode=TwoWay}" Width="60" Margin="10,3" FontSize="20" VerticalAlignment="Center"/>
                <Label Content="dBm" Margin="0,3" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="载波功率F2:" Margin="10,3" FontSize="20"/>
                <TextBlock Text="{Binding Path=Power2,Mode=TwoWay}" Width="60" Margin="10,3" FontSize="20" VerticalAlignment="Center"/>
                <Label Content="dBm" Margin="0,3" FontSize="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
