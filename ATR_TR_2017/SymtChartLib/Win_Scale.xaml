<Window x:Class="SymtChartLib.Win_Scale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Win_Scale" Height="200" Width="430" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <WrapPanel Orientation="Vertical" Margin="0,20,0,0">
            <WrapPanel Orientation="Horizontal" Margin="10,0">
                <Label Content="Max:" FontSize="20" Width="63"/>
                <TextBox Height="28" FontSize="20" Width="120" Name="txtMax"/>
                <Label Content="Min:" FontSize="20" Margin="20,0,0,0" Width="60"/>
                <TextBox Height="28" FontSize="20" Width="120" Name="txtMin"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="10,10">
                <Label Content="Div:" FontSize="20" Width="63"/>
                <TextBox Height="28" FontSize="20" Width="120" Name="txtDiv"/>
            </WrapPanel>
            <WrapPanel VerticalAlignment="Bottom">
                <Button HorizontalAlignment="Left" FontSize='20' Margin="160,0,0,0" Width="83" Height="28" Click="Button_Click" Content="OK"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</Window>

